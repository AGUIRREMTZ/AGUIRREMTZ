import javax.swing.JOptionPane;
public class tresNum {
    public static void main(String[] args) {
        int num1, num2, num3, M;
      
        String input1 = JOptionPane.showInputDialog("Ingrese el primer número:");
        num1 = Integer.parseInt(input1);
        
        String input2 = JOptionPane.showInputDialog("Ingrese el segundo número:");
        num2 = Integer.parseInt(input2);
        
        String input3 = JOptionPane.showInputDialog("Ingrese el tercer número:");
        num3 = Integer.parseInt(input3);
        
        if (num1 < num2) {
            M = num1;
        } else {
            M = num2;
        } 
        if (num3 < M) {
            M = num3;
        } 
        JOptionPane.showMessageDialog(null, "El numero mas pequeño es" +M);
        if (num1 == num2) {
            if (num2 == num3) {
                JOptionPane.showMessageDialog(null, "Los tres números son iguales.");
            }
        }
    }
}
